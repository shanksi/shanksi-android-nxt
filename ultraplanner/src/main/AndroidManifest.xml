<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.co.shanksi.ultraapp" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StageListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StageDetailActivity"
            android:label="@string/title_stage_detail"
            android:parentActivityName=".StageListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StageListActivity" />
        </activity>
    </application>

</manifest>
